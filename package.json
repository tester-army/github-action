{
  "name": "@tester-army/github-action",
  "version": "0.1.0",
  "description": "GitHub Action for Tester Army automated testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --minify",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "keywords": [
    "github-action",
    "testing",
    "automation",
    "tester-army"
  ],
  "author": "Tester Army",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tester-army/github-action.git"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@typescript-eslint/parser": "^8.54.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.27.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.1.4"
  }
}
